        <div class="flex justify-center space-x-8 mb-8">
            <label for="username"><b>Username</b></label>
            <input class="text-black text-center rounded-lg bg-gray-300"  type="text" placeholder="Enter Username" name="username">
        </div>
    
        <div class="flex justify-center space-x-8 mb-10">
            <label for="password"><b>Password</b></label>
            <input class="text-black text-center rounded-lg bg-gray-300" type="password" placeholder="Enter Password" name="password">
        </div>
    
        <div class="flex justify-center">
            <input type="submit" value="Register" class="bg-color-secondary text-color-primary-dark ease-in hover:opacity-[50%] duration-200 font-bold px-4 py-2 rounded-lg">
        </div>
        <div class="w-[296px] mx-auto mt-6">
            <h2 >Already have an account? <a href="#" id="logBtn" class="hover:text-color-secondary font-bold">Login</a></h2>
        </div>
    </form>
</div>
